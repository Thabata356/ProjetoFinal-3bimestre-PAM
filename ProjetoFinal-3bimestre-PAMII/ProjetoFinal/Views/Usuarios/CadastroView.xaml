<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ProjetoFinal.ViewModels.Usuarios"
             x:Class="ProjetoFinal.Views.Usuarios.CadastroView"
             x:DataType="local:UsuarioViewModel"
             Title="CadastroView"
             BackgroundColor="#44A1A0">

    <Grid>
        <!-- Forma -->
        <Image Source="forma.png"
               HorizontalOptions="End"
               VerticalOptions="Start"
               Aspect="Fill"
               HeightRequest="600"
               WidthRequest="1000"
               Margin="0,0,-180,0" />

        <!-- Volta -->
        <Label Text="← Voltar"
               TextColor="White"
               FontFamily="MontserratRegular"
               FontSize="16"
               VerticalOptions="Start"
               HorizontalOptions="End"
               Margin="0,45,30,0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding VoltarCommand}" />
            </Label.GestureRecognizers>
        </Label>

        <ScrollView>
            <VerticalStackLayout Margin="30"
                                 Spacing="20">

                <!-- Logo -->
                <Image Source="logo.png"
                       HorizontalOptions="Start"
                       HeightRequest="170"
                       WidthRequest="170"
                       Margin="0,-60,0,-270" />

                <!-- CADASTRO -->
                <Label Text="CADASTRO"
                       FontSize="32"
                       HorizontalOptions="Center"
                       TextColor="White"
                       FontFamily="MontserratRegular"
                       FontAttributes="Bold"
                       Margin="0,280,0,10" />

                <!-- Campo NOME -->
                <Border BackgroundColor="#44A1A0"
                        HeightRequest="65.58"
                        WidthRequest="437.2"
                        StrokeShape="RoundRectangle 4"
                        Stroke="White"
                        StrokeThickness="1.40"
                        Padding="15,0">
                    <HorizontalStackLayout Spacing="15"
                                           VerticalOptions="Center">
                        <Image Source="user.png"
                               WidthRequest="20"
                               HeightRequest="20"
                               VerticalOptions="Center"/>
                        <Entry Placeholder="NOME"
                               Text="{Binding NomeUsuario}"
                               TextColor="#FFF"
                               PlaceholderColor="#FFF"
                               BackgroundColor="Transparent"
                               FontFamily="Montserrat"
                               VerticalOptions="Center"
                               WidthRequest="390"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Campo TIPO DO PERFIL -->
                <Border BackgroundColor="#44A1A0"
                        WidthRequest="437.2"
                        StrokeShape="RoundRectangle 4"
                        Stroke="White"
                        StrokeThickness="1.40"
                        Padding="15,10">
                    <HorizontalStackLayout Spacing="15"
                                            VerticalOptions="Center">
                        <Image Source="grupo.png"
                               WidthRequest="20"
                               HeightRequest="40"
                               VerticalOptions="Center"/>
                        <VerticalStackLayout Spacing="5"
                                             VerticalOptions="Center">
                            <Label Text="TIPO PERFIL"
                                   TextColor="White"
                                   FontFamily="MontserratRegular"/>
                            <Picker ItemsSource="{Binding ListaTiposPerfil}"
                                    ItemDisplayBinding="{Binding NomeTipoPerfil}"
                                    SelectedItem="{Binding TipoPerfilSelecionado}" 
                                    TitleColor="White"
                                    TextColor="White"
                                    FontFamily="Montserrat"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Fill"
                                    WidthRequest="350"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Border>
                
                <!-- Campo RM -->
                <Border BackgroundColor="#44A1A0"
                        HeightRequest="65.58"
                        WidthRequest="437.2"
                        StrokeShape="RoundRectangle 4"
                        Stroke="White"
                        StrokeThickness="1.40"
                        Padding="15,0">
                    <HorizontalStackLayout Spacing="15"
                                           VerticalOptions="Center">
                        <Image Source="rm.png"
                               WidthRequest="20"
                               HeightRequest="20"
                               VerticalOptions="Center"/>
                        <Entry Placeholder="RM"
                               Text="{Binding RmUsuario}"
                               TextColor="White"
                               PlaceholderColor="White"
                               BackgroundColor="Transparent"
                               FontFamily="Montserrat"
                               Keyboard="Numeric"
                               VerticalOptions="Center"
                               WidthRequest="390"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Campo EMAIL -->
                <Border BackgroundColor="#44A1A0"
                        HeightRequest="65.58"
                        WidthRequest="437.2"
                        StrokeShape="RoundRectangle 4"
                        Stroke="White"
                        StrokeThickness="1.40"
                        Padding="15,0">
                    <HorizontalStackLayout Spacing="15"
                                           VerticalOptions="Center">
                        <Image Source="email.png"
                               WidthRequest="20"
                               HeightRequest="20"
                               VerticalOptions="Center"/>
                        <Entry Placeholder="EMAIL"
                               Text="{Binding EmailUsuario}"
                               TextColor="White"
                               PlaceholderColor="White"
                               BackgroundColor="Transparent"
                               FontFamily="Montserrat"
                               Keyboard="Email"
                               VerticalOptions="Center"
                               WidthRequest="390"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Campo CPF -->
                <Border BackgroundColor="#44A1A0"
                        HeightRequest="65.58"
                        WidthRequest="437.2"
                        StrokeShape="RoundRectangle 4"
                        Stroke="White"
                        StrokeThickness="1.40"
                        Padding="15,0">
                    <HorizontalStackLayout Spacing="15"
                                           VerticalOptions="Center">
                        <Image Source="cpf.png"
                               WidthRequest="20"
                               HeightRequest="20"
                               VerticalOptions="Center"/>
                        <Entry Placeholder="CPF"
                               Text="{Binding CpfUsuario}"
                               TextColor="White"
                               PlaceholderColor="White"
                               BackgroundColor="Transparent"
                               FontFamily="Montserrat"
                               Keyboard="Numeric"
                               VerticalOptions="Center"
                               WidthRequest="390"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Campo SENHA -->
                <Border BackgroundColor="#44A1A0"
                        HeightRequest="65.58"
                        WidthRequest="437.2"
                        StrokeShape="RoundRectangle 4"
                        Stroke="White"
                        StrokeThickness="1.40"
                        Padding="15,0">
                    <HorizontalStackLayout Spacing="15"
                                           VerticalOptions="Center">
                        <Image Source="senha.png"
                               WidthRequest="20"
                               HeightRequest="20"
                               VerticalOptions="Center"/>
                        <Entry Placeholder="SENHA"
                               Text="{Binding SenhaUsuario}"
                               TextColor="White"
                               PlaceholderColor="White"
                               BackgroundColor="Transparent"
                               FontFamily="Montserrat"
                               IsPassword="True"
                               VerticalOptions="Center"
                               WidthRequest="390"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Botão CONCLUIR -->
                <Button Text="CONCLUIR"
                        Command="{Binding CadastrarCommand}"
                        BackgroundColor="white"
                        TextColor="#44A1A0"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="65.58"
                        WidthRequest="437.2"
                        CornerRadius="4"
                        Margin="0,30,0,0"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>